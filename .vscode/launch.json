{
    // ===================================================
    // IPFS Go Mobile 调试配置
    // ===================================================
    // 本文件包含两种调试配置，用于测试不同方面的IPFS功能
    // 使用方法: 
    // 1. 在VS Code左侧点击"运行和调试"按钮(或按Ctrl+Shift+D)
    // 2. 在顶部下拉菜单中选择要使用的配置
    // 3. 点击绿色播放按钮或按F5开始调试
    // ===================================================
    
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Examples Basic", // 调试IPFS内容操作示例
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/examples/basic",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [],
            // 用途: 测试IPFS的内容添加和检索功能
            // 这个程序会启动IPFS节点，添加内容，然后检索并验证内容
            // 适合用于验证IPFS的核心内容操作功能
        },
        {
            "name": "Debug Test Node", // 调试IPFS节点启动
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/ipfstest",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [],
            // 用途: 测试IPFS节点的启动和基本连接
            // 这个程序仅启动IPFS节点并保持运行，不执行其他操作
            // 适合用于验证节点能否正常初始化和连接到网络
        }
    ]
}